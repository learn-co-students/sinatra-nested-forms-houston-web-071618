
<h1>Display your Pirate here</h1>
  <div><%= @pirate.name %></div>
  <div><%= @pirate.weight %></div>
  <div><%= @pirate.height %></div>
  <br>

  <h2>Display your ships here</h2>

  <% @pirate.ships.each do | ship | %>
    <div><%= ship.name %></div>
    <div><%= ship.type %></div>
    <div><%= ship.booty %></div>
    <br>
  <% end %>
